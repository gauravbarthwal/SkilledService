<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_message_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    android:padding="@dimen/margin_32"
    android:gravity="center">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/alert_message"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        style="@style/style_heading_label" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/alert_message">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/action_left"
            style="@style/style_action"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_height_small"
            android:paddingEnd="@dimen/margin_8"
            android:paddingStart="@dimen/margin_8"
            android:text="@string/action_cancel_task" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/action_right"
            style="@style/style_action"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_height_small"
            android:paddingEnd="@dimen/margin_8"
            android:paddingStart="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_12"
            android:text="@string/action_accept_task" />
    </LinearLayout>

</RelativeLayout>