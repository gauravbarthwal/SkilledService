<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_task_width"
    android:layout_height="@dimen/card_task_height"
    android:elevation="@dimen/elevation_5"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/add_new_task"
            android:layout_width="@dimen/margin_62"
            android:layout_height="@dimen/margin_62"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_6"
            android:src="@drawable/ic_add_task" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/style_heading_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_new_task"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_6"
            android:textSize="@dimen/text_size_18"
            android:text="@string/request_service" />

    </RelativeLayout>

</android.support.v7.widget.CardView>