<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_task_width"
    android:layout_height="@dimen/card_task_height"
    android:elevation="@dimen/elevation_5"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="@dimen/margin_6">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/worker_avatar"
            android:layout_width="@dimen/margin_42"
            android:layout_height="@dimen/margin_42"
            android:src="@drawable/ic_worker" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_62"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_toEndOf="@id/worker_avatar"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/worker_name"
                style="@style/style_heading_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Gaurav Barthwal"
                android:textSize="@dimen/text_size_20" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/worker_rating"
                style="@style/style_heading_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_6"
                android:maxLines="2"
                android:text="Ratings: 4/5"
                android:textSize="@dimen/text_size_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_32"
            android:layout_below="@id/worker_avatar"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_12"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                style="@style/style_heading_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:text="Skill :"
                android:textSize="@dimen/text_size_18" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/worker_skill"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_12"
                android:src="@drawable/ic_barber" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>