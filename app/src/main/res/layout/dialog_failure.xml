<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_message_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    android:padding="@dimen/margin_32"
    android:gravity="center">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/alert_icon"
        android:layout_width="@dimen/margin_32"
        android:layout_height="@dimen/margin_32"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_error"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_below="@id/alert_icon"
        android:id="@+id/alert_message"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:layout_centerHorizontal="true"
        style="@style/style_heading_label" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/action_close"
        style="@style/style_action"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_height_small"
        android:layout_below="@id/alert_message"
        android:layout_centerHorizontal="true"
        android:paddingEnd="@dimen/margin_8"
        android:paddingStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_12"
        android:text="@string/action_close" />

</RelativeLayout>